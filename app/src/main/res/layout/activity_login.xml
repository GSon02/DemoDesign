<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/containerLogIn"
    android:background="@drawable/background_login"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilUser"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="308dp"
        android:layout_height="66dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:animateLayoutChanges="true"
        android:textColorHint="@color/white"
        app:boxCornerRadiusBottomEnd="24dp"
        app:boxCornerRadiusBottomStart="24dp"
        app:boxCornerRadiusTopEnd="24dp"
        app:boxCornerRadiusTopStart="24dp"
        app:boxStrokeColor="@color/white"
        app:endIconMode="password_toggle"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilPass"
        app:placeholderTextColor="@color/white"
        app:prefixTextColor="@color/white"
        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24_white">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:hint="PassWord"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="#FAF7F7" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPass"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="306dp"
        android:layout_height="63dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="60dp"
        android:animateLayoutChanges="true"
        android:textColorHint="#F3EEEE"
        app:boxBackgroundColor="#00FFFFFF"
        app:boxCornerRadiusBottomEnd="24dp"
        app:boxCornerRadiusBottomStart="24dp"
        app:boxCornerRadiusTopEnd="24dp"
        app:boxCornerRadiusTopStart="24dp"
        app:boxStrokeColor="#F8F8F8"
        app:hintTextColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_person_24_white"
        app:suffixTextColor="#F1E5E5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:bottomLeftRadius="24dp"
            android:bottomRightRadius="24dp"
            android:hint="UserName"
            android:textColor="@color/white"
            android:textColorHint="#EFEDED"
            android:topLeftRadius="24dp"
            android:topRightRadius="24dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="125dp"
        android:layout_height="47dp"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="220dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/custom_button_color"
        android:bottomLeftRadius="24dp"
        android:bottomRightRadius="24dp"
        android:text="Đăng Nhập"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:topLeftRadius="24dp"
        android:topRightRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSkipLogIn"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/custom_button_color"
        android:bottomLeftRadius="24dp"
        android:bottomRightRadius="24dp"
        android:text="Bỏ Qua"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:topLeftRadius="24dp"
        android:topRightRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLostPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="16dp"
        android:animateLayoutChanges="true"
        android:text="Quên Mật Khẩu ?"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTextNull" />

    <TextView
        android:animateLayoutChanges="true"
        android:id="@+id/tvXinChao"
        android:layout_width="198dp"
        android:layout_height="61dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="156dp"
        android:text="Xin Chào!"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:animateLayoutChanges="true"
        android:id="@+id/tv_DesText"
        android:layout_width="288dp"
        android:layout_height="46dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="66dp"
        android:text="Chào mừng bạn đến với ứng dụng nghe nhạc của chúng tôi"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvXinChao" />

    <TextView
        android:animateLayoutChanges="true"
        android:id="@+id/tvQuotes"
        android:layout_width="289dp"
        android:layout_height="41dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="65dp"
        android:text="Chào mừng đến với Music"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_DesText" />

    <TextView
        android:id="@+id/tvTextNull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="123dp"
        android:textStyle="bold"
        android:text="Chưa có tài khoản Đăng ký"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn" />

    <TextView
        android:id="@+id/tvDangKy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginEnd="182dp"
        android:text="Tại Đây"
        android:textColor="#F30EFA"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTextNull" />

</androidx.constraintlayout.widget.ConstraintLayout>